{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Information",
      "System": "Information"
    }
  },

  "AllowedHosts": "*",

  "WeatherApi": {
    "BaseUrl": "https://api.weatherapi.com/v1/",
    "ApiKey": ""
  },

  "OpenTelemetry": {
    "Tracing": {
      "ConsoleExporterEnabled": true
    },
    "Metrics": {
      "ConsoleExporterEnabled": false
    },
    "Logging": {
      "ConsoleExporterEnabled": true
    }
  },

  "RateLimiting": {
    "Global": {
      "PermitLimit": 60,
      "WindowMinutes": 1,
      "QueueLimit": 5
    }
  }
}
